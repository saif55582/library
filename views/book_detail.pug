extends layout

block content
    h1 #{title} : #{book.title}

    p #[strong Author :] 
        a(href=book.author.url) #{book.author.name}
    p #[strong Summary :] #{book.summary}
    p #[strong ISBN :] #{book.isbn}

    p #[strong Genre :]&nbsp;
        each val in book.genre
            a(href=val.url) #{val.name}
            |,
    hr
    p   
        a(href=book.url+'/delete') 
            button.btn.btn-sm.btn-danger Delete
        a(href=book.url+'/update') 
            button.btn.btn-sm.btn-primary Update

    div(style='margin-left:20px;margin-top:20px')

        h4 Copies

        each val in book_instance
            hr
            if val.status=='Available'
                p.text-success #{val.status}
            else if val.status=='Maintenance'
                p.text-danger #{val.status}
            else 
                p.text-warning #{val.status}
            if val.status != 'Available'
                p #[strong  Due Back :] #{val.due_back_formatted}
            
            p #[strong Imprint : ] #{val.imprint}
            p #[strong Id : ] #{val._id}

            





    