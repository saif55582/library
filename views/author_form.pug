extends layout

block content
    h1 #{title}

    form(method='post', action='')
        div.row
            div.form-group.col-md-6
                label(for='first_name') First Name:
                input#first_name.form-control(type='text', placeholder='First Name', name='first_name', required='true', value=(author===undefined ? '' :author.first_name))
        div.row
            div.form-group.col-md-6
                label(for='family_name') Family Name:
                input#family_name.form-control(type='text', placeholder='Family Name', name='family_name', required='true', value=(author===undefined? '' : author_family_name))
        div.row 
             div.form-group.col-md-6
                label(for='date_of_birth') Date of Birth:
                input#date_of_birth.form-control(type='date', name='date_of_birth', value=(undefined===author ? '' : author.date_of_birth) )
        div.row 
             div.form-group.col-md-6
                label(for='date_of_death') Date of Death:
                input#date_of_birth.form-control(type='date', name='date_of_death', value=(undefined===author ? '' : author.date_of_death) )
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li #{error.msg}