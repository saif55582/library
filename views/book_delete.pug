extends layout

block content
  h1 #{title}: #{book.name}

  if book_instance.length
  
    p #[strong Delete the following book instance before attempting to delete this Book.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Book Instance
    
      each val in book_instance
            hr
            if val.status=='Available'
                p.text-success #{val.status}
            else if val.status=='Maintenance'
                p.text-danger #{val.status}
            else 
                p.text-warning #{val.status}
            if val.status != 'Available'
                p #[strong  Due Back :] #{val.due_back_formatted}
            
            p #[strong Imprint : ] #{val.imprint}
            p #[strong Id : ] #{val._id}  

  else
    p Do you really want to delete this Book?
    
    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='text',name='bookid', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete